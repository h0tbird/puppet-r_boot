install
url --url="http://repo01.demo.lan/centos/7/os/x86_64/"
text
keyboard es
lang en_US.UTF-8
eula --agreed
network --bootproto=dhcp --device=eth0 --onboot=on
rootpw password
timezone Europe/Madrid --isUtc
services --enabled sshd
selinux --disabled
firewall --disabled
repo --name="CentOS" --baseurl=http://repo01.demo.lan/centos/7/os/x86_64/
repo --name="Updates" --baseurl=http://repo01.demo.lan/centos/7/updates/x86_64/
repo --name="Misc" --baseurl=http://repo01.demo.lan/centos/7/misc/x86_64/
ignoredisk --only-use=sda
bootloader --location=mbr
zerombr
clearpart --all --initlabel
part swap --asprimary --fstype="swap" --size=1024
part /boot --fstype xfs --size=200
part / --fstype ext4 --size=1024 --grow
reboot

%packages --excludedocs --ignoremissing
@Core
kmod-forcedeth
%end

%post --nochroot --log=/root/ks-post-nochroot.log
rm -f /mnt/sysimage/etc/yum.repos.d/*
cp /tmp/yum.repos.d/* /mnt/sysimage/etc/yum.repos.d/
%end
